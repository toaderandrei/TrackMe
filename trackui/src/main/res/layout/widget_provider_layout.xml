<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/widgetBoundingBox">

    <LinearLayout
        style="@style/TrackWidgetFrame"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/track_widget_stats_container"
            style="@style/widgetStatsContainer"
            android:layout_weight="1"
            android:baselineAligned="false">

            <LinearLayout style="@style/widgetStatsSection">
                <!-- item1 -->
                <LinearLayout style="@style/widgetItemContainer2">

                    <TextView
                        android:id="@+id/widget_item1_label"
                        style="@style/widgetLabel" />

                    <LinearLayout style="@style/widgetValueContainer">

                        <TextView
                            android:id="@+id/widget_item1_value"
                            style="@style/widgetValue" />

                        <TextView
                            android:id="@+id/widget_item1_unit"
                            style="@style/widgetUnit" />

                        <Chronometer
                            android:id="@+id/widget_item1_chronometer"
                            style="@style/widgetValue" />
                    </LinearLayout>
                </LinearLayout>
                <!-- vertical separator -->
                <LinearLayout
                    style="@style/widgetVerticalSeparator"
                    android:baselineAligned="false">

                    <LinearLayout
                        style="@style/widgetVerticalSpacer"
                        android:layout_weight="2" />

                    <LinearLayout
                        style="@style/widgetVerticalLine"
                        android:layout_weight="1" />
                </LinearLayout>
                <!-- item3 -->
                <LinearLayout style="@style/widgetItemContainer2">

                    <TextView
                        android:id="@+id/track_widget_item3_label"
                        style="@style/widgetLabel" />

                    <LinearLayout style="@style/widgetValueContainer">

                        <TextView
                            android:id="@+id/widget_item3_value"
                            style="@style/widgetLabel" />

                        <TextView
                            android:id="@+id/widget_item3_unit"
                            style="@style/widgetUnit" />

                        <Chronometer
                            android:id="@+id/widget_item3_chronometer"
                            style="@style/widgetValue" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- horizontal separator -->
            <LinearLayout
                style="@style/widgetHorizontalSeparator"
                android:baselineAligned="false">

                <LinearLayout
                    style="@style/widgetHorizontalSpacer"
                    android:layout_weight="1" />

                <LinearLayout
                    style="@style/widgetHorizontalLine"
                    android:layout_weight="38" />

                <LinearLayout
                    style="@style/widgetHorizontalSpacer"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout style="@style/widgetStatsSection">
                <!-- item2 -->
                <LinearLayout style="@style/widgetItemContainer2">

                    <TextView
                        android:id="@+id/track_widget_item2_label"
                        style="@style/widgetLabel" />

                    <LinearLayout style="@style/widgetValueContainer">

                        <TextView
                            android:id="@+id/widget_item2_value"
                            style="@style/widgetValue" />

                        <TextView
                            android:id="@+id/widget_item2_unit"
                            style="@style/widgetUnit" />

                        <Chronometer
                            android:id="@+id/widget_item2_chronometer"
                            style="@style/widgetValue" />
                    </LinearLayout>
                </LinearLayout>
                <!-- vertical separator -->
                <LinearLayout
                    style="@style/widgetVerticalSeparator"
                    android:baselineAligned="false">

                    <LinearLayout
                        style="@style/widgetVerticalLine"
                        android:layout_weight="1" />

                    <LinearLayout
                        style="@style/widgetVerticalSpacer"
                        android:layout_weight="2" />
                </LinearLayout>
                <!-- item4 -->
                <LinearLayout style="@style/widgetItemContainer2">

                    <TextView
                        android:id="@+id/widget_item4_label"
                        style="@style/widgetLabel" />

                    <LinearLayout style="@style/widgetValueContainer">

                        <TextView
                            android:id="@+id/widget_item4_value"
                            style="@style/widgetValue" />

                        <TextView
                            android:id="@+id/widget_item4_unit"
                            style="@style/widgetUnit" />

                        <Chronometer
                            android:id="@+id/widget_item4_chronometer"
                            style="@style/widgetValue" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/widgetButtonContainer">

            <LinearLayout
                style="@style/widgetVerticalSpacer"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/track_widget_record_status"
                style="@style/widgetRecordStatus" />

            <LinearLayout
                style="@style/widgetVerticalSpacer"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
